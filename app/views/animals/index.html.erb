<p id="notice"><%= notice %></p>
<h3>Animais</h3>

<table class="table table-condensed table-striped" style="width: 0%;">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Custo mensal</th>
      <th>Tipo</th>
      <th>Dono</th>
      <th colspan="3" style="text-align: center;">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @animals.each do |animal| %>
      <tr>
        <td><%= animal.nome %></td>
        <td><%= number_to_currency(animal.custo_mensal) %></td>
        <td><%= animal.tipo.tipo %></td>
        <td><%= animal.pessoa.nome %></td>
        <td><%= link_to 'Exibir', animal, class:"btn btn-info btn-sm" %></td>
        <td><%= link_to 'Editar', edit_animal_path(animal), class:"btn btn-default btn-sm" %></td>
        <td><%= link_to 'Deletar', animal, method: :delete, class:"btn btn-danger btn-sm", data: { confirm: 'Certeza que deseja deletar?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Animal', new_animal_path, class:"btn btn-default btn-sm"%>
