<p id="notice"><%= notice %></p>

<h3>Pessoas</h3>

<table class="table table-condensed table-striped" style="width: 0%;">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Documento</th>
      <th>Data Nascimento</th>
      <th colspan="3" style="text-align: center;">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @pessoas.each do |pessoa| %>
      <tr>
        <td><%= pessoa.nome %></td>
        <td><%= pessoa.documento %></td>
        <td><%= pessoa.data_nascimento %></td>
        <td><%= link_to 'Exibir', pessoa, class:"btn btn-info btn-sm" %></td>
        <td><%= link_to 'Editar', edit_pessoa_path(pessoa), class:"btn btn-default btn-sm" %></td>
        <td><%= link_to 'Deletar', pessoa, method: :delete, class:"btn btn-danger btn-sm", data: { confirm: 'Certeza que deseja deletar?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Pessoa', new_pessoa_path, class:"btn btn-default btn-sm" %>
