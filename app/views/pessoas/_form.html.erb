<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.11/jquery.mask.min.js"></script>
        
<script type="text/javascript">
  $("#pessoa_data_nascimento").mask('99/99/9999', { placeholder: "__/__/____" });
</script>

<%= form_for(pessoa) do |f| %>
  <% if pessoa.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(pessoa.errors.count, "error") %> prohibited this pessoa from being saved:</h2>

      <ul>
      <% pessoa.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-sm-3">
      <div class="form-group">
        <%= f.label :nome %>
        <%= f.text_field :nome, class:"form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-3">
      <div class="form-group">
        <%= f.label :documento %>
        <%= f.text_field :documento, class:"form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-3">
      <div class="form-group">
        <%= f.label :data_nascimento %>
        <%= f.text_field :data_nascimento, class:"form-control" %>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= f.submit nil, class: 'btn btn-primary btn-sm' %>
  </div>
<% end %>
