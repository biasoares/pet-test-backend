<p id="notice"><%= notice %></p>

<h3>Tipos</h3>

<table class="table table-condensed table-striped" style="width: 0%;">
  <thead>
    <tr>
      <th>Tipo</th>
      <th colspan="3" style="text-align: center;">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @tipos.each do |tipo| %>
      <tr>
        <td><%= tipo.tipo %></td>
        <td><%= link_to 'Exibir', tipo, class:"btn btn-info btn-sm" %></td>
        <td><%= link_to 'Editar', edit_tipo_path(tipo), class:"btn btn-default btn-sm" %></td>
        <td><%= link_to 'Deletar', tipo, method: :delete, class:"btn btn-danger btn-sm", data: { confirm: 'Certeza que deseja deletar?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Tipo', new_tipo_path, class:"btn btn-default btn-sm" %>
